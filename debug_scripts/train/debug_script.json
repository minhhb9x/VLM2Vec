{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Train",
      "type": "debugpy",
      "request": "launch",
      "program": "train.py",
      "console": "integratedTerminal",
      "args": [
        "--lora", "--lora_r", "16",
        "--model_name", "Qwen/Qwen2-VL-2B-Instruct",
        "--bf16", "--pooling", "eos",
        "--normalize", "True",
        "--temperature", "0.02",
        "--dataset_config", "debug_scripts/train/train_image_debug.yaml",
        "--run_name", "debug_model",
        "--output_dir", "./runs/debug_model",
        "--per_device_train_batch_size", "4",
        "--grad_cache", "True",
        "--gc_q_chunk_size", "4",
        "--gc_p_chunk_size", "4",
        "--interleave_batch_size", "2",
        "--lr_scheduler_type", "linear",
        "--learning_rate", "5e-5",
        "--warmup_steps", "5",
        "--max_steps", "50",
        "--save_steps", "10",
        "--logging_steps", "1",
        "--logging_steps", "1", 
        "--save_safetensors", "True", 
        "--remove_unused_columns", "False", 
        "--resume_from", "auto",
        "--report_to", "none"
      ],
      "env": {
        "CUDA_VISIBLE_DEVICES": "0"
      }
    }
  ]
}
