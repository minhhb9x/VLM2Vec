{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Train",
      "type": "debugpy",
      "request": "launch",
      "program": "train.py",
      "console": "integratedTerminal",
      "args": [
        "--lora", "--lora_r", "16",
        "--model_name", "apple/FastVLM-0.5B",
        "--bf16", "--pooling", "eos",
        "--normalize", "True",
        "--temperature", "0.02",
        "--dataset_config", "debug_scripts/train/train_image_debug.yaml",
        "--run_name", "debug_model",
        "--output_dir", "./runs/debug_model",
        "--per_device_train_batch_size", "4",
        "--learning_rate", "5e-5",
        "--max_steps", "50",
        "--save_steps", "10",
        "--logging_steps", "1",
        "--report_to", "none"
      ],
      "env": {
        "CUDA_VISIBLE_DEVICES": "0"
      }
    }
  ]
}
